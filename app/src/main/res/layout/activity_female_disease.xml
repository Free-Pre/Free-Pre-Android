<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    tools:context=".FemaleDiseaseActivity">

    <TextView
        android:id="@+id/text_female_disease"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@color/primary_light"
        android:gravity="center"
        android:text="Female Disease"
        android:textColor="@color/primary_dark"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <!--질염 버튼 버튼 -->
    <Button
        android:id="@+id/btn_vaginitis"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/text_female_disease"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="100dp"
        android:text="vaginitis"
        android:textAllCaps="false"
        android:textSize="36dp"
        android:background="@drawable/style_drug_option"
        android:elevation="3dp">
    </Button>


    <!--다낭성 난소 증후군 버튼 -->
    <Button
        android:id="@+id/btn_pcos"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_vaginitis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="100dp"
        android:text="PolyCystic Ovary Syndrome"
        android:textAllCaps="false"
        android:textSize="36dp"
        android:background="@drawable/style_drug_option"
        android:elevation="3dp">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>