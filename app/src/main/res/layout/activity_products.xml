<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    tools:context=".ProductsActivity">

    <TextView
        android:id="@+id/text_products_of_menstuation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_light"
        android:gravity="center"
        android:padding="15dp"
        android:text="Products Of \nMenstuation"
        android:textColor="@color/primary_dark"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>


    <LinearLayout
        android:id="@+id/layout_products_of_menstruation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_products_of_menstuation">

        <TextView
            android:id="@+id/text_sanitary_pad"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/style_products_content"
            android:gravity="center"
            android:text="sanitary pad"
            android:textColor="@color/primary_light"
            android:textSize="36dp"></TextView>

        <TextView
            android:id="@+id/text_tampon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/style_products_content"
            android:gravity="center"
            android:text="tampon"
            android:textColor="@color/primary_light"
            android:textSize="36dp"></TextView>

        <TextView
            android:id="@+id/text_menstrual_cup"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/style_products_content"
            android:gravity="center"
            android:text="menstrual cup"
            android:textColor="@color/primary_light"
            android:textSize="36dp"></TextView>

        <TextView
            android:id="@+id/text_period_underwear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="period underwear"
            android:textColor="@color/primary_light"
            android:textSize="36dp"></TextView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>