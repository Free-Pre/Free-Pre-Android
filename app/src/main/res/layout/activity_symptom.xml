<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SymptomActivity"
    android:background="@color/primary_dark">


    <TextView
        android:id="@+id/Head"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@color/primary_light"
        android:gravity="center"
        android:text="Check Your Symptoms"
        android:textColor="@color/primary_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/btn_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Head">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_headache"
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:text="headache"
                android:textSize="36sp"
                android:gravity="center"
                android:textColor="@color/primary_light"
                android:background="@drawable/style_symptom_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/text_breast_pain"
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:text="breast pain"
                android:textSize="36sp"
                android:gravity="center"
                android:textColor="@color/primary_light"
                android:background="@drawable/style_symptom_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/text_depressed"
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:text="depressed"
                android:textSize="36sp"
                android:gravity="center"
                android:textColor="@color/primary_light"
                android:background="@drawable/style_symptom_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/text_fatigue"
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:text="fatigue"
                android:textSize="36sp"
                android:gravity="center"
                android:textColor="@color/primary_light"
                android:background="@drawable/style_symptom_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/text_anxious"
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:text="anxious"
                android:textSize="36sp"
                android:gravity="center"
                android:textColor="@color/primary_light"
                android:background="@drawable/style_symptom_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/text_swollen_breast"
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:text="swollen breasts"
                android:textSize="36sp"
                android:gravity="center"
                android:textColor="@color/primary_light"
                android:background="@drawable/style_symptom_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/text_appetite_change"
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:text="appetite changes"
                android:textSize="36sp"
                android:gravity="center"
                android:textColor="@color/primary_light"
                android:background="@drawable/style_symptom_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/text_constipation"
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:text="constipation"
                android:textSize="36sp"
                android:gravity="center"
                android:textColor="@color/primary_light"
                android:background="@drawable/style_symptom_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/text_diarrhea"
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:text="diarrhea"
                android:textSize="36sp"
                android:gravity="center"
                android:textColor="@color/primary_light"
                android:background="@drawable/style_symptom_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/text_dema"
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:text="dema"
                android:textSize="36sp"
                android:gravity="center"
                android:textColor="@color/primary_light"
                android:background="@drawable/style_symptom_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/text_back_pain"
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:text="back pain"
                android:textSize="36sp"
                android:gravity="center"
                android:textColor="@color/primary_light"
                android:background="@drawable/style_symptom_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:text="save"
        android:textColor="@color/primary_dark"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/primary_light"
        android:gravity="center"
        android:textAllCaps="false">
    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>