<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    tools:context=".PreSettingActivity">

    <TextView
        android:id="@+id/Head"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@color/primary_light"
        android:gravity="center"
        android:text="Setting"
        android:textColor="@color/primary_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_nickname"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:background="@color/primary_light"
        android:gravity="center"
        android:text="Hello, NICKNAME!"
        android:textColor="@color/primary_dark"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_nickname"
        android:orientation="vertical">

    <Button
        android:id="@+id/btn_edit_nickname"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/style_free_setting_content"
        android:gravity="center"
        android:text="Edit nickname"
        android:textColor="@color/primary_light"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_delete_account"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/style_free_setting_content"
        android:gravity="center"
        android:text="Delete my acount"
        android:textColor="@color/primary_light"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textAllCaps="false"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>