<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    tools:context=".EditPeriodActivity">

    <TextView
        android:id="@+id/text_enter_edit_date"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/primary_light"
        android:gravity="center"
        android:text="Edit menstrual date!"
        android:textColor="@color/primary_dark"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="180dp"
        android:layout_height="93dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/style_unclicked_period_border"
        android:text="start"
        android:textColor="@color/primary_light"
        android:textSize="48dp"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_enter_edit_date"></Button>

    <Button
        android:id="@+id/btn_end"
        android:layout_width="180dp"
        android:layout_height="93dp"
        android:background="@drawable/style_unclicked_period_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_enter_edit_date"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        android:text="end"
        android:textSize="48dp"
        android:textColor="@color/primary_light"
        android:textAllCaps="false"></Button>

    <FrameLayout
        android:id="@+id/frame_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start">
    </FrameLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="save"
        android:textAllCaps="false"
        android:textSize="48dp"
        android:textColor="@color/primary_dark"
        android:background="@color/primary_light"/>

</androidx.constraintlayout.widget.ConstraintLayout>